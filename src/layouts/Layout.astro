---

import '../styles/global.css';
import { SITE_TITLE, SITE_AUTHOR } from '../siteConstants';

import Header from '../components/header.astro';
import Footer from '../components/footer.astro';

export interface Props{
	title: string;
  description: string;
  homeButton?: boolean;
}

const { title = 'Lokalt Byrå', homeButton, description } = Astro.props as Props;

---

<html lang="no" dir="ltr">
  <head>

    <!-- static stuff -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name=”robots” content="index, follow">
    <meta name="format-detection" content="telephone=no" />

    <!-- dynamic stuff -->
	  <title>{SITE_TITLE} – {title}</title>

    <!-- fonts and css -->
    <link href='../fonts/NeueMontreal-Regular.woff2' rel='stylesheet' type='text/css'>
    <link href='../fonts/NeueMontreal-Bold.woff2' rel='stylesheet' type='text/css'>
    <link href='../fonts/NeueMontreal-Italic.woff2' rel='stylesheet' type='text/css'>
    <link href='../fonts/NeueMontreal-BoldItalic.woff2' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://use.typekit.net/ghz0qsf.css">

    <meta name="description" content={description}>
    <meta name="author" content={SITE_AUTHOR}>

    <meta property="og:title" content={SITE_TITLE} – {title}/>
    <meta property="og:type" content="website"/>
    <meta property="og:description" content={description}/>
    <meta property="og:url"content="https://lokaltbyraa.no" />
    <meta property="og:image" content="/LokaltByraaOpenGraph.jpg"/>

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="website">
    <meta name="twitter:creator" content={SITE_AUTHOR}>
    <meta name="twitter:title" content={SITE_TITLE} – {title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content="/LokaltByraaTwitter.jpg">

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5c5c5c">
    <meta name="msapplication-TileColor" content="#ffc40d">
    <meta name="theme-color" content="#ffffff">

  </head>

  <body>
		<Header homeButton={ homeButton }/>
		<slot />
		<Footer />
  </body>
  </html>