---
import Item from '../components/item.astro';

const metoderData = [
    {title: ' Bli godt kjent med folk og steder', body: '– for å forstå behov, ønsker og drømmer', iconAlt: "Ikon av kaffekanne, kaffekopp og twist", iconPath: "/src/images/icons/godtKjent.png" },
    {title: 'Arbeide iherdig med idéer', body: '– som begeistrer og har merverdi for samfunnet', iconAlt: "Ikon av lyspære", iconPath: "/src/images/icons/ideer.png" },
    {title: 'Teste tidlig, enkelt og ofte', body: '– for å lære fra den virkelige verden', iconAlt: "Ikon av hånd som trykker på en mobiltelefon", iconPath: "/src/images/icons/testing.png" }
];
---

<ul class="">

    {metoderData.map(metode =>(
        <Item 
		title={metode.title}
		body={metode.body}
		imagePath={metode.iconPath}
		altText={metode.iconAlt}
		 />
     ))}

</ul>