---
import Item from '../components/item.astro';

const disiplinerData = [
    {title: 'Strategisk design:', body: 'Metoder for å utrede og forstå utfordringer gjennom eksperimentering ', iconPath: "/src/images/icons/strategisk.png", iconAlt: "Ikon av en stolpe som markerer et veiskille"},
    {title: 'Tjenestedesign:', body: 'Metoder for å løse utfordringer med utgangspunkt i brukernes behov ', iconPath: "/src/images/icons/tjeneste.png", iconAlt: "Ikon av et menneske med snakkeboble og tenkeboble"},
    {title: 'Systemorientert design:', body: 'Metoder for å jobbe med komplekse og sammensatte utfordringer', iconPath: "/src/images/icons/system.png", iconAlt: "Ikon av et isfjell med koblinger over og under overflaten"},
    {title: 'Interaksjonsdesign:', body: 'Metoder for å jobbe med digitale flater, data og brukeropplevelse', iconPath: "/src/images/icons/interaksjon.png", iconAlt: "Ikon av et menneske omgitt av en laptop og en mobiltelefon"}
];
---

<ul class="">

    {disiplinerData.map(disiplin =>(
        <Item 
		title={disiplin.title}
		body={disiplin.body}
		imagePath={disiplin.iconPath}
		altText={disiplin.iconAlt}
		 />
     ))}

</ul>