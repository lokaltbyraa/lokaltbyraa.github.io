---

interface Props {
    src: string;
    imagePlaceholder: string;
}

const { src, imagePlaceholder } = Astro.props;

---

<div class="videoContainer">
    <video
        src={"/video/" + src }
        controls
        preload="none"
        poster={"/video/" + imagePlaceholder }
        >
        
    </video>
</div>


<style>
    .videoContainer, video {
        width: auto;
        max-width: var(--contentWidthMedium);
        height: auto;
        max-height: 70svh;
    }

    .videoContainer{
        display: grid;
        grid-template-columns: 1fr;
        place-items: center;
        margin: 2rem auto;
    }

    video{
        border-radius: 0.5rem;
        overflow: hidden;
        margin: auto auto;
    }

    @media (width <= 540px ) {
        .videoContainer, video {
        width: 100%;
        max-height: none;
    }

    }  


</style>