---

interface Props {
    src: string;
}

const { src } = Astro.props;

---

<div class="videoContainer">
    <video src={"/public/video/" + src } controls></video>
</div>


<style>
    .videoContainer, video {
        width: auto;
        max-width: var(--contentWidthMedium);
        height: auto;
        max-height: 70svh;
    }

    .videoContainer{
        display: grid;
        grid-template-columns: 1fr;
        place-items: center;
        margin: 2rem auto;
    }

    video{
        border-radius: 0.5rem;
        overflow: hidden;
        margin: auto auto;
    }


</style>