---
export interface Props {
  rotation?: boolean;
}

const { rotation=false } = Astro.props as Props;

const { default: innerHTML } = await import(`../images/icons/lbLogo.svg?raw`);

---

<div class={`logo ${rotation && 'rotation'}`} arria-label:"Logo" >
    <Fragment set:html={innerHTML} id="logo"/>
</div>

<style>
    .logo {
    display: inline-block;
    height: 10rem;
    width: 10rem;
    aspect-ratio: 1/1;
    margin: 3rem 3rem 0 0;
    }

    .rotation{
        animation: rotation 60s infinite linear;
    }
   

@keyframes rotation {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(359deg);
    }
  }

  @media (width <= 450px ) {
    .logo{
        width: 7.5rem;
        height: 7.5rem;
        margin: 1rem 1rem 0 0;
    }
}  
    
</style>