<div class="outerMargin">
    <div class="imageGrid">
        <slot />
    </div>
</div>

<style>

    .outerMargin{
        margin-left: 2rem;
        margin-right: 2rem;
    }

    .imageGrid{
        display: grid;
        gap: 0 1.5rem;
        max-width: var(--contentWidthXL);
        margin: 0 auto;
        justify-content: center;  
    }

    .imageGrid:has(> :nth-child(2n+2):last-child){
        grid-template-columns: repeat(2, auto)
    }

    .imageGrid:has(> :nth-child(3n+3)){
        grid-template-columns: repeat(3, auto)
    }

    .imageGrid:has(> :nth-child(5n+5)){
        grid-template-columns: repeat(5, auto)
    }

</style>