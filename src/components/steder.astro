---
import { Image } from 'astro:assets';

// import Norge from '../images/norge.png';
import Norge from '../components/norge.astro';

const steder = [
    'Gamvik',
    'Skjervøy',
    'Kvænangen',
    'Nordreisa',
    'Kåfjord',
    'Storfjord',
    'Øksnes',
    'Sogndal',
    'Luster',
    'Aurland',
    'Øygarden',
    'Oslo',
    'Karmøy',
    'Larvik',
    'Stavanger',
    'Kvitsøy',
    'Kragerø',
];

const kontorData = [
    {sted: 'Storfjord', type: 'Hovedkontor'},
    {sted: 'Oslo', type: 'Distriktskontor'}
];

---

<div class="section steder">

    <div>
        <h2>Vi har jobba over hele landet – fra nord til sør!</h2>

        <ul>
            {steder.map(sted =>(
                <li>{sted}</li>
             ))}
        </ul>

        <h2>Her holder vi til</h2>
        <ul>

            {kontorData.map(kontor =>(
                <li>{kontor.sted} – {kontor.type}</li>
            ))}

        </ul>
        
    </div>

    <Norge steder={steder}/>

    <!-- <Image src={Norge} alt="Kart over Norge med alle stedene vi har jobbet og holder til på."> -->
</div>

<style>
    .steder{
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0em;
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
    justify-content: center;
    align-items: end;
    }

    .steder h2{
        max-width: 20ch;
    }

    .steder li{
        font-size: 1.5em;
        line-height: 0.25em;
        list-style: disc;
        margin-left: 2ch;
    }

    .steder img{
        max-width: 100%;
        max-height: 85svh;
    }
</style>